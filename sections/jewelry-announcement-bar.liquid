{
  "name": "Jewelry Announcement Bar",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Jewelry Announcement Bar",
      "category": "Jewelry-Announcement-Bar"
    }
  ]
}
{% endschema %}
